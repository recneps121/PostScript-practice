/epitrochoid {
	1 dict begin
		/r exch def
		/d exch def
		/b exch def
		/a exch def
		/deg 1 def
		/t deg r mul def
	
		306 396 translate
		0 0 moveto		
		360 {			
		/f_x {a b add t cos mul d a b add t mul b div cos mul add} def
		/f_y {a b add t sin mul d a b add t mul b div sin mul sub} def
		deg 1 eq {
			f_x f_y moveto
		} {
			f_x f_y lineto
		} ifelse
		/deg deg 1 add def
		/t deg r mul def
		} repeat
		
		stroke
		showpage
	end
} def


/Times-Roman findfont        % Find the font 
14 scalefont                 % Make it a bigger font
setfont                      % Now load the font as the current font

200 750 translate

0 0 moveto
(50 5 10 1 epitrochoid) show
0 -100 translate
0 0 moveto
50 5 10 1 epitrochoid 
stroke
0 -100 translate
0 -20 translate

0 0 moveto
(50 10 5 1 epitrochoid) show
0 -100 translate
50 10 5 1 epitrochoid
stroke
0 -120 translate

0 0 moveto
(29 7 43 5 epitrochoid) show
0 -100 translate
29 7 43 5 epitrochoid
stroke
0 -120 translate
showpage
